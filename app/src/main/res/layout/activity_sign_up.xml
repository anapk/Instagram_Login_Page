<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cody.insagram_clone.MainActivity">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#80e0e0e0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="110dp"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/instagram1"/>


        <EditText
            android:id="@+id/signup_user"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_radius_square"
            android:hint="账户"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="#e0e0e0"
            android:textSize="18sp"
            />


        <EditText
            android:id="@+id/signup_pass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_radius_square"
            android:hint="密码"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="#e0e0e0"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_login_square"
            android:text="注册"
            android:textColor="#90bdbdbd"
            android:textSize="16dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="注册即即表明你同意Facebook的条款和隐私权政策."
            android:textColor="#e0e0e0"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_changetologinmode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@android:color/transparent"
        android:elevation="20dp"
        android:gravity="center"
        android:onClick="changeToLoginMode"
        android:text="已经有账户了?  登陆。"
        />

</LinearLayout>
